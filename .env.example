# Base Station Platform - Environment Variables
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# PostgreSQL (single instance with multiple databases)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# MongoDB
MONGODB_USER=admin
MONGODB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# RabbitMQ
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Grafana
GRAFANA_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# JWT Secret (REQUIRED - no default provided for security)
# Generate a secure secret with: openssl rand -base64 64
# This must be at least 256 bits (32 bytes) for HS256 algorithm
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET_WITH_openssl_rand_base64_64

# Internal Service Authentication Secret (REQUIRED - prevents header spoofing)
# Generate with: openssl rand -hex 32
# Gateway uses this to sign HMAC requests to backend services
# Backend services verify signature to ensure requests came from gateway
SECURITY_INTERNAL_SECRET=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32

# Auth Service Admin Password (REQUIRED - for initial admin user)
# Must be at least 12 characters
AUTH_ADMIN_PASSWORD=CHANGE_ME_STRONG_ADMIN_PASSWORD

# Redis Password (Optional)
REDIS_PASSWORD=

# WebSocket CORS Origins (Optional - comma-separated list)
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000

# API Gateway CORS Origins (Optional - comma-separated list)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# SonarCloud Configuration (Optional - for code quality analysis)
SONAR_PROJECT_KEY=your_github_username_repository_name
SONAR_ORGANIZATION=your_sonarcloud_organization
SONAR_TOKEN=CHANGE_ME_GET_FROM_SONARCLOUD_ACCOUNT

# SECURITY NOTES:
# - JWT_SECRET and SECURITY_INTERNAL_SECRET are REQUIRED - the application will fail without them
# - For development, use strong randomly generated secrets
# - For production, ALWAYS set these environment variables with strong, unique passwords
# - Never commit the .env file to version control
# - SonarCloud tokens should be stored as GitHub Secrets, not in .env for CI/CD
