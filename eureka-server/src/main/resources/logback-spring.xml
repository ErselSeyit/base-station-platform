<?xml version="1.0" encoding="UTF-8"?>
<!--
  Logback configuration for eureka-server
  
  Logging Strategy:
  - ROOT level set to WARN for production safety
  - Eureka registry events at INFO for service discovery visibility
  - Heartbeat/renewal events at WARN to reduce noise
  
  MDC Keys used:
  - correlationId: Request correlation for admin operations
  
  Production recommendations:
  - Monitor service registration/deregistration events
  - Set up alerts for excessive evictions (network issues)
  - Consider structured logging for service mesh analytics
-->
<configuration debug="false">
    
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <springProperty name="LOG_PATTERN" source="logging.pattern.console" 
                    defaultValue="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CONSOLE"/>
        <queueSize>256</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <includeCallerData>false</includeCallerData>
    </appender>

    <!-- ROOT Logger: WARN for production -->
    <root level="WARN">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </root>
    
    <!-- Eureka Server: INFO for registry events -->
    <logger name="com.netflix.eureka" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>
    
    <!-- Discovery events: INFO for registration tracking -->
    <logger name="com.netflix.discovery" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>
    
    <!-- Eureka Server application -->
    <logger name="com.huawei.eureka" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE"/>
    </logger>
    
    <!-- Spring Boot startup -->
    <logger name="org.springframework.boot" level="INFO"/>
    
    <!-- Development profile -->
    <springProfile name="dev,local">
        <logger name="com.netflix.eureka" level="DEBUG"/>
        <logger name="com.netflix.discovery" level="DEBUG"/>
    </springProfile>

</configuration>
